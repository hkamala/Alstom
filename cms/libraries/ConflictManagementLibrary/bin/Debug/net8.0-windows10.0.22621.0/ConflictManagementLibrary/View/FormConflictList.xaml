<Window
    x:Class="ConflictManagementLibrary.View.FormConflictList"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:ConflictManagementLibrary.Model.Trip"
    mc:Ignorable="d"
    Title="Trip Conflict List">

    <!--#region ViewBox-->
    <Viewbox Height="Auto" Width="Auto" Stretch="UniformToFill">
        <!--#region Grid-->
        <Grid x:ConnectionId='2' x:Name="root" Background="White" Height="Auto" Width="Auto">
            <!-- Menu Bar -->
            <Border Canvas.Top="62" BorderThickness="2" BorderBrush="White" Margin="5,5,5,2" CornerRadius="5">
                <StackPanel VerticalAlignment="Top" Height="40" Background="LightGray" CornerRadius="5">
                    <MenuBar Grid.Row="0" Padding="10,5" CornerRadius="5">
                        <MenuBarItem Title="Control">
                            <MenuFlyoutSubItem Text="Auto Routing">
                                <MenuFlyoutItem x:ConnectionId='19' Text="Auto Routing"                             />
                            </MenuFlyoutSubItem>
                        </MenuBarItem>
                    </MenuBar>
                </StackPanel>
            </Border>

            <!-- ListView with ScrollViewer -->
            <StackPanel Margin="10,55,10,5" Background="LightGray" CornerRadius="5" VerticalAlignment="Center" Width="Auto" Height="Auto">
                <Grid Margin="10" Background="White" CornerRadius="5" VerticalAlignment="Center" Width="Auto" Height="Auto">
                    <ListView x:ConnectionId='5' Name="lvTrips" SelectionMode="Single" Height="495" Width="Auto" IsItemClickEnabled="True" CornerRadius="5" ScrollViewer.VerticalScrollMode="Enabled" ScrollViewer.VerticalScrollBarVisibility="Visible" Background="LightGray">
                        <ListView.Header>
                            <Grid Background="White" Height="30" Margin="2" CornerRadius="5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="90"/>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="70"/>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="90"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Service ID" Grid.Column="0" FontWeight="Bold" FontSize="14" Margin="10,5" TextAlignment="Left"/>
                                <TextBlock Text="Trip ID" Grid.Column="1" FontWeight="Bold" FontSize="14" Margin="10,5" TextAlignment="Left"/>
                                <TextBlock Text="Direction" Grid.Column="2" FontWeight="Bold" FontSize="14" Margin="10,5" TextAlignment="Left"/>
                                <TextBlock Text="Start Time" Grid.Column="3" FontWeight="Bold" FontSize="14" Margin="10,5" TextAlignment="Left"/>
                                <TextBlock Text="Train Type" Grid.Column="4" FontWeight="Bold" FontSize="14" Margin="10,5" TextAlignment="Left"/>
                                <TextBlock Text="Train Sub Type" Grid.Column="5" FontWeight="Bold" FontSize="14" Margin="10,5" TextAlignment="Left"/>
                                <TextBlock Text="Length" Grid.Column="6" FontWeight="Bold" FontSize="14" Margin="10,5" TextAlignment="Left"/>
                                <TextBlock Text="PostFix" Grid.Column="7" FontWeight="Bold" FontSize="14" Margin="10,5" TextAlignment="Left"/>
                                <TextBlock Text="Start Location" Grid.Column="8" FontWeight="Bold" FontSize="14" Margin="10,5" TextAlignment="Left"/>
                                <TextBlock Text="End Location" Grid.Column="9" FontWeight="Bold" FontSize="14" Margin="10,5" TextAlignment="Left"/>
                                <TextBlock Text="# Conflicts" Grid.Column="10" FontWeight="Bold" FontSize="14" Margin="10,5" TextAlignment="Left"/>
                            </Grid>
                        </ListView.Header>
                        <ListView.ItemTemplate>
                            <DataTemplate                        >
                                <Grid x:ConnectionId='7'>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="90"/>
                                        <ColumnDefinition Width="80"/>
                                        <ColumnDefinition Width="80"/>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="70"/>
                                        <ColumnDefinition Width="80"/>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="90"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock x:ConnectionId='8'                        Grid.Column="0" TextAlignment="Left"/>
                                    <TextBlock x:ConnectionId='9'                        Grid.Column="1" TextAlignment="Left"/>
                                    <TextBlock x:ConnectionId='10'                           Grid.Column="2" TextAlignment="Left"/>
                                    <TextBlock x:ConnectionId='11'                           Grid.Column="3" TextAlignment="Left"/>
                                    <TextBlock x:ConnectionId='12'                             Grid.Column="4" TextAlignment="Left"/>
                                    <TextBlock x:ConnectionId='13'                         Grid.Column="5" TextAlignment="Left"/>
                                    <TextBlock x:ConnectionId='14'                        Grid.Column="6" TextAlignment="Left"/>
                                    <TextBlock x:ConnectionId='15'                         Grid.Column="7" TextAlignment="Left"/>
                                    <TextBlock x:ConnectionId='16'                               Grid.Column="8" TextAlignment="Left"/>
                                    <TextBlock x:ConnectionId='17'                             Grid.Column="9" TextAlignment="Left"/>
                                    <TextBlock x:ConnectionId='18'                               Grid.Column="10" TextAlignment="Left"/>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </StackPanel>

            <!-- Event Log TextBox -->
            <Border Canvas.Top="62" BorderThickness="2" BorderBrush="White" Margin="5,5,5,2" CornerRadius="5">
                <StackPanel Height="150" Background="LightGray" CornerRadius="5" VerticalAlignment="Bottom">
                    <TextBox x:ConnectionId='4' Name="txtEvent" TextWrapping="Wrap" AcceptsReturn="True" Margin="5,5,5,5" CornerRadius="5" VerticalAlignment="Bottom"/>
                </StackPanel>
            </Border>

            <!-- Status TextBlock -->
            <Border Canvas.Top="62" BorderThickness="2" BorderBrush="White" Margin="5,5,5,2" CornerRadius="5">
                <Canvas VerticalAlignment="Bottom" Height="30" Background="LightGray">
                    <TextBlock x:ConnectionId='3' Padding="10,5" Name="tssConflictResolutionStatus" Text="Automatic Conflict Resolution Status"/>
                </Canvas>
            </Border>
        </Grid>
        <!--#endregion-->
    </Viewbox>
    <!--#endregion-->
</Window>

